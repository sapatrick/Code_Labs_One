<h1>Employees</h1>
<p>
	<strong>Number of Employees:</strong>
	<%= @employees.size %>
</p>

  <ol>
    <% @employees.each do |employee| %>
    <div class="record employee-list">
	  <li>
	  	<%= link_to employee_last_name_first(employee), employee %>
	  </li> 
	</div> 
    <% end %>
  </ol>


<p>
	<%= link_to("Create New Employee", new_employee_path) %>
</p>