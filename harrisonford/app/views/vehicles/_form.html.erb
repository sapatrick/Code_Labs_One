<%= form_for(@vehicle) do |f| %>
  <%= render "shared/errors" %>
  <fieldset>
  <p>
    <%= f.label :year %>:<br/> 
    <%= f.select :year,Date.today.year-20 .. Date.today.year+4, autofocus: true %>
</p>
<p>
    <%= f.label :make %>:<br/> 
    <%= f.text_field :make %>
</p>
<p>
    <%= f.label :model %>:<br/>
    <%= f.text_field :model %>
</p>
<p>
    <%= f.label :variety %>:<br/>
    <%= f.text_field :variety %>
</p>
<p>
    <%= f.label :condition %>:<br/>
    <%= f.select :condition, Vehicle::CONDYS, prompt: " " %>
</p>
<p>
    <%= f.label :mileage %>:<br/>
    <%= f.text_field :mileage %>
</p>
<p>
    <%= f.label :count %>:<br/>
    <%= f.text_field :count %>
</p>
<p>
    <%= f.label :price %>:<br/>
    <%= f.text_field :price %>
</p>
<p>
  <%= f.label :image_file_name %><br/>
  <%= f.text_field :image_file_name %>
</p>
<p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  </fieldset>
<% end %>
